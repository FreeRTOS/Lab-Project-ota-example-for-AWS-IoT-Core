root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[{*.{nix,yml,json,cmake},CMakeLists.txt}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[.gitmodules]
indent_style = tab

[COMMIT_EDITMSG]
max_line_length = 72
